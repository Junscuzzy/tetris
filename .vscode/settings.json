{
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "editor.formatOnSave": true,
    "[javascript]": {
        "editor.formatOnSave": false
    },
    "[javascriptreact]": {
        "editor.formatOnSave": false
    },
    "[typescript]": {
        "editor.formatOnSave": false
    },
    "[typescriptreact]": {
        "editor.formatOnSave": false
    },
    "files.exclude": {
        "node_modules": true,
        ".pnp": true,
        "**/.pnp.js": true,
        "coverage": true,
        "build": true,
        "**/.DS_Store": true,
        "**/.env.local": true,
        "**/.env.development.local": true,
        "**/.env.test.local": true,
        "**/.env.production.local": true,
        "**/npm-debug.log*": true,
        "**/yarn-debug.log*": true,
        "**/yarn-error.log*": true
    },
}